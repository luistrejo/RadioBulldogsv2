<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#ffffffff"
    >





    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/caratula"
        android:scaleType="fitXY"
        android:src="@drawable/bull"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transparente"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/caratula"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentEnd="true"
        >

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/titulocancion"
        android:textStyle="italic"
        android:gravity="center"
            android:text="Cargando..."
            android:textColor="#ffffffff"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startPlaying"
            android:onClick="startPlaying"
            android:text="Play"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonStopPlay"
            android:onClick="stopPlaying"
            android:text="Stop"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/seekBar1"
            android:layout_alignEnd="@+id/seekBar1" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar1"
            android:progress="@integer/abc_max_action_buttons"
            android:indeterminate="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView16"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/nextcancion"
            android:textStyle="italic"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Cargando..."
            android:layout_below="@+id/textView16"
            android:layout_marginTop="15dp"
            android:textColor="#ffffffff"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="A continuacion:"
            android:id="@+id/textView16"
            android:layout_below="@+id/titulocancion"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Estas escuchando:"
            android:id="@+id/textView7"
            android:textColor="#ffffffff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        </RelativeLayout>

</RelativeLayout>