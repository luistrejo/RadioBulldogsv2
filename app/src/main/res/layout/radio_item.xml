<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/songtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff616b"
        android:textSize="15dp"
        android:textStyle="italic"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/titulo"
        android:layout_toEndOf="@+id/titulo" />

    <TextView
        android:id="@+id/nexttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo"
        android:layout_toRightOf="@+id/siguiente"
        android:layout_toEndOf="@+id/siguiente" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff616b"
        android:textSize="15dp"
        android:textStyle="italic"
        android:text="Estas escuchando:"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A continuacion:"
        android:layout_below="@+id/songtitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
       
</RelativeLayout>